<%- include("Partials/adminheader") %>

<body>
   
    <div class="container">
      <div class="row">
        <div class="col-lg-12 my-4">
          <h2 align="center">แบบฟอร์มบันทึกสินค้า</h2>
        
          <form class="" action="/admin/sneaker/<%= editsneaker._id %>/edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="">ชื่อสินค้า</label>
              <input type="text" name="Namesneaker" value="<%= editsneaker.Namesneaker %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="">Mini detail</label>
                <input name="Minidetail" value="<%= editsneaker.Minidetail %>" class="form-control">
              </div>
            <div class="form-group">
              <label for="">รายละเอียด</label>
              <input name="Detail" rows="4" cols="80" class="form-control" value="<%= editsneaker.Detail %>" >
            
            <div class="form-group">
              <label for="">Brand</label>
              <p><select type="text" value="<%= editsneaker.Brand %>"  name="Brand" >
                <option>nike</option>
                <option>adidas</option>
                <option>jordan</option>
            </select>
            </p>
            </div>
            <p>Size US Men</p>
            <p><select type="text" value="<%= editsneaker.Sizesneaker %>"  name="Sizesneaker" >
              <option>7 US</option>
              <option>8 US</option>
              <option>9 US</option>
              <option>10 US</option>
              <option>11 US</option>
              <option>12 US</option>
              <option>13 US</option>
          </select>
          </p>
          <div class="form-group">
            <label for="">จำนวน</label>
            <input type="text" name="Count" value="<%= editsneaker.Count %>"  class="form-control">
          </div>
    
              <div class="form-group">
                <label for="">สี</label>
                <input type="text" name="Color" value="<%= editsneaker.Color %>"  class="form-control">
              </div>
              <div class="form-group">
                <label for="">ราคา</label>
                <input type="text" name="Price" value="<%= editsneaker.Price %>"  class="form-control">
              </div>  
              
              <p>Photo</p>
       
              <div class="from-grop">
                  <input type="file" class="form-control" name="Image" accept="Image/*" multiple>
                </div>
            
          
          
        </div> 
      </div>
      <div><input type="submit"  value="บันทึกข้อมูล" class="btn btn-success"></div>
      
    </div>
  </form> 
  </body>


  <%- include("Partials/footer") %>